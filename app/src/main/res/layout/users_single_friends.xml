<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friends_single_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/default_avatar" />
    <TextView
        android:id="@+id/friends_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/friends_single_image"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/friends_single_image"
        android:text="Display name"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/friends_single_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/friends_single_image"
        android:layout_alignStart="@+id/friends_single_name"
        android:text="Hey there , I'm using whatsapp"
        android:textAlignment="viewStart"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="12sp" />


</RelativeLayout>
    </android.support.v7.widget.CardView>